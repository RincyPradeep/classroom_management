<script>
    function formatDate(){
        let dateString = document.getElementById("mydate").value;
        
        var allDate = dateString.split(' ');
        var thisDate = allDate[0].split('-');
        
        var newDate = [thisDate[2],thisDate[1],thisDate[0] ].join("/");
       
        document.getElementById("newdate").value = newDate;
        document.getElementById("newday").value = thisDate[2];
        document.getElementById("newmonth").value = thisDate[1];
        document.getElementById("newyear").value = thisDate[0];

        document.getElementById("show_btn").hidden=false;
    }
</script>

