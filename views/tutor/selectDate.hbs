                <p class="text-center bg-light p-2"><input type="date" min="2020-01-01" max="2025-12-31" id="mydate" onchange="formatDate()"></p>
                <input type="text" id="newdate" name="selectdate" hidden>
                <input type="text" id="newday" name="selectday" hidden>
                <input type="text" id="newmonth" name="selectmonth" hidden>
                <input type="text" id="newyear" name="selectyear" hidden>
