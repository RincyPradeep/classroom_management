<section>
    <div class="row">
        <div class="col-md-2">
            <nav class="navbar navbar-expand-lg navbar-light">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <div class="sidebar">
                            <a href="/tutor/tutor_home">Home</a>
                            <a class="active" href="/tutor/tutor_profile">Profile</a>
                            <a href="/tutor/student_details">Students</a>
                            <a href="/tutor/attendance/select_date">Attendance</a>
                            <a href="/tutor/assignments">Assignments</a>
                            <a href="/tutor/notes">Notes</a>
                            <a href="/tutor/announcements">Announcements</a>
                            <a href="/tutor/events">Events</a>
                            <a href="/tutor/add_photos">Photos</a>
                            
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="col-10 col-md-6 container content">
            <h2 class="text-center mb-5">Edit Profile</h2>
            <form action="/tutor/tutor_profile/edit_profile" method="POST" enctype="multipart/form-data">
                <label for="">Name</label>
                <input type="text" name="name" class="form-control" value="{{profile.name}}" required>
                <label for="">Job</label>
                <input type="text" name="job" class="form-control" value="{{profile.job}}" required>
                <label for="">Class</label>
                <input type="text" name="class" class="form-control" value="{{profile.class}}" required>
                <label for="">Address</label>
                <textarea name="address" rows="4" cols="80" class="form-control" required>{{profile.address}}</textarea>
                <label for="">Mobile</label>
                <input type="text" name="mobile" class="form-control" value="{{profile.mobile}}" required>
                <label for="">Email</label>
                <input type="email" name="email" class="form-control" value="{{profile.email}}" required>
                
                <img src="/images/{{profile._id}}.jpg" class="m-3" id="imgView" style="border-radius: 50%;">
                <input type="file" name="Image" class="form-control" onchange="viewImage(event)" accept="image/*">
                <button type="submit" class="btn btn-success save-btn float-right">Submit</button>
            </form>
        </div>
        
    </div>
</section>

<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>