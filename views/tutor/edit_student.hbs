        <div class="col-10 col-md-6 content container">
            <h2 class="text-center">Edit Student</h2>
            <form action="/tutor/student_details/edit_student/{{stud._id}}" method="POST">
                <label for="">Roll No.</label>
                <input type="text" name="rollno" class="form-control" value="{{stud.rollno}}" required>
                <label for="">Name</label>
                <input type="text" name="name" class="form-control" value="{{stud.name}}" required>
                <label for="">Gender</label>
                <input type="text" name="gender" class="form-control" value="{{stud.gender}}" required>
                <label for="">Phone (start with +91)</label>
                <input type="text" name="phone" class="form-control" value="{{stud.phone}}" required>
                <label for="">Email</label>
                <input type="email" name="email" class="form-control" value="{{stud.email}}" required>
                <label for="">Username</label>
                <input type="text" name="username" class="form-control" value="{{stud.username}}" required>

                
                <button type="submit" class="btn btn-success save-btn float-right">Submit</button>
            </form>
        </div>
    </div>
