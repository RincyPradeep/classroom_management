<section class="tutor-home-page">

  <div class="row">
    <div class="col-md-2" style="background-color:#f1f1f1;width:261px;">
      <nav class="navbar navbar-expand-lg navbar-light">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav">
            <div class="sidebar">
              
              <a class="active" href="/tutor/tutor_home">Home</a>
              <a href="/tutor/tutor_profile">Profile</a>
              <a href="/tutor/student_details">Students</a>
              <a href="/tutor/attendance/select_date">Attendance</a>
              <a href="/tutor/assignments">Assignments</a>
              <a href="/tutor/notes">Notes</a>
              <a href="/tutor/announcements">Announcements</a>
              <a href="/tutor/events">Events</a>
              <a href="/tutor/add_photos">Photos</a>

            </div>
          </div>
        </div>
      </nav>
    </div>

    <div class="col-md-10 mt-5">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/tutor_slide1.jpeg" class="d-block w-100 tutor-slide-img" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/tutor_slide2.jpeg" class="d-block w-100 tutor-slide-img" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/tutor_slide3.jpeg" class="d-block w-100 tutor-slide-img" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="row home-content">
    <div class="col-md-2"></div>
    <div class="col-12 col-md-5 p-4">
      <div class="announcements">
        <h3 class="text-center">Announcements</h3>
        {{#each announcement}}
        <ul>
          <li><a href="/tutor/each_announcement/{{this._id}}">{{this.message}}</a></li>
        </ul>
        {{/each}}
      </div>
    </div>
    <div class="col-12 col-md-5 p-4">
      <div class="events">
        <h3 class="text-center">Events</h3>
        {{#each event}}
        <ul>
          <li><a href="/tutor/events/each_event/{{this._id}}">{{this.event}}</a></li>
        </ul>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <h4>Contact details</h4>
      <p>Principle:1234325678, HOD:1234325678, Tutor:1234325678</p>
    </div>
  </div>
</section>