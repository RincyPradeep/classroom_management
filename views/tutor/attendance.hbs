<section>
    <div class="row">
        <div class="col-md-2">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <div class="sidebar">
                            <a href="/tutor/tutor_home">Home</a>
                            <a href="/tutor/tutor_profile">Profile</a>
                            <a href="/tutor/student_details">Students</a>
                            <a class="active" href="/tutor/attendance/select_date">Attendance</a>
                            <a href="/tutor/assignments">Assignments</a>
                            <a href="/tutor/notes">Notes</a>
                            <a href="/tutor/announcements">Announcements</a>
                            <a href="/tutor/events">Events</a>
                            <a href="/tutor/add_photos">Photos</a>
                            
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="col-12 col-md-10 attendance content container">
            <h2 class="text-center">Attendance</h2>
            
            <p class="text-center bg-light p-2">{{selectdate}}</p><br>
            <table class="table-striped">
                <tr>
                    <th class="pl-5">Roll No.</th>
                    <th>Name</th>
                    <th>Attendance</th>
                </tr>
                {{#each present}}
                <tr>
                    <td class="pl-5">{{this.rollno}}</td>
                    <td>{{this.name}}</td>
                    <td>Present</td>
                </tr>
                {{/each}}
                {{#each absent}}
                <tr>
                    <td class="pl-5">{{this.rollno}}</td>
                    <td>{{this.name}}</td>
                    <td>Absent</td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</section>





