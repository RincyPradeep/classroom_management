<section>
    <div class="row">
        <div class="col-md-2">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <div class="sidebar">
                            <a href="/tutor/tutor_home">Home</a>
                            <a href="/tutor/tutor_profile">Profile</a>
                            <a href="/tutor/student_details">Students</a>
                            <a href="/tutor/attendance">Attendance</a>
                            <a class="active" href="/tutor/assignments">Assignments</a>
                            <a href="/tutor/notes">Notes</a>
                            <a href="/tutor/announcements">Announcement</a>
                            <a href="/tutor/events">Events</a>
                            <a href="/tutor/add_photos">Photos</a>
                            <a href="#">Quiz</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="col-md-8 assignments container content">
            <h2 class="text-center">Assignments</h2>
            <form action="/tutor/assignments/add_assignment" method="POST" enctype="multipart/form-data" onsubmit="myFunction()">
                <label>Topic</label>
                <input type="text" name="topic" class="form-control"><br>
                <label>File</label>
                <input type="file" name="Image" class="form-control" id="myfile" onchange="viewImage(event)">
                <input type="hidden" name="filename" id="file_name">
                <button type="submit" class="btn btn-success save-btn float-right">Save</button>
            </form>

            
            <table>
                <tr class="bg-light">
                    <th>Topic</th>
                    <th>File</th>
                    <th>Actions</th>
                </tr>
                {{#each assignments}}
                <tr>
                    <td>{{this.topic}}</td>
                    <td><a href="/tutor/showPDF/{{this._id}}">{{this.filename}}</a></td>
                    <td>
                        
                        <a href="/tutor/assignments/delete_assignment/{{this._id}}" onclick="return confirm('Are you want to delete {{this.topic}} ?')" class="text-dark"><i class="fa fa-trash ml-3"></i></a>
                    </td>
                    
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</section>



<script>
    function viewImage(event){
        let x= document.getElementById('myfile').files[0].name;
        document.getElementById("file_name").value=x;
    }
    function myFunction() {
         alert("The assignment was posted");
    }
</script>
