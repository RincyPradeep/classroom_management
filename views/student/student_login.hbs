<section class="student-login">
    <div class="container login">
    <div class="row">
        <div class="col-12 col-md-6">
                    <form action="/student_login" method="POST">

                    <div class="form-group">
                        
                        <input type="text" class="form-control" name="Username" placeholder="Enter Username">
                    </div>
                    <div class="form-group">
                        
                        <input type="password" class="form-control" name="Password" placeholder="Enter Password">
                    </div>
                    {{#if loginErr}}
                    <p class="error text-danger">{{loginErr}}</p>
                    {{/if}}
                    
                    <button type="submit" class="login-btn pt-1 pb-1">Login</button>
                </form>
                <hr class="bg-white mt-5">
                <p class="text-white text-center">or</p>
                <a href="/otplogin" class="btn login-btn">Get an OTP on your phone</a>
            </div>
        </div>
    </div>
</section>