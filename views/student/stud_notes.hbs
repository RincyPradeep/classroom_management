<section>
    <div class="row">
        <div class="col-md-2">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <div class="sidebar">
                            <a href="/student_home">Home</a>
                            <a href="/student_profile">Profile</a>
                            <a href="/student_todays_task">Today's Task</a>
                            <a href="/student_attendance/select_month">Attendance</a>
                            <a href="/student_assignments">Assignments</a>
                            <a class="active" href="/student_notes">Notes</a>
                            <a href="/student_announcements">Announcements</a>
                            <a href="/student_events">Events</a>
                            <a href="/student_photos">Photos</a>
                            
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="col-md-8 assignments container content">
            <h2 class="text-center mb-5">Notes</h2>
            
            <table id="notesTable" class="table-striped table-bordered table-condensed">
                <thead>
                <tr class="bg-light">
                    <th>Date</th>
                    <th>Topic</th>
                    <th>File</th>
                    <th>Video</th>
                    <th>Video</th>
                    
                </tr>
                </thead>
                <tbody>
                {{#each notes}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.topic}}</td>
                    <td><a href="/tutor/show_notesPDF/{{this._id}}">{{this.filename}}</a></td>
                    <td><a href="/show_notes_video/{{this._id}}">{{this.videoname}}</a></td>
                    <td><a href="/tutor/show_notes_yvideo/{{this.YVideo}}">{{this.YVideo}}</a></td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
  $(function () {
    $('#notesTable').DataTable();
  });

  
</script>


