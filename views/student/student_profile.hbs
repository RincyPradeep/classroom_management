<div class="col-md-6 profile content">
      <h2 class="text-center mb-5">Profile</h2>
      <table>
        
        <tr>
          <th>Name:</th>
          <td>{{profile.name}}</td>
        </tr>
        <tr>
          <th>Email:</th>
          <td>{{profile.email}}</td>
        </tr>
        <tr>
          <th>Gender:</th>
          <td>{{profile.gender}}</td>
        </tr>
        <tr>
          <th>Mobile:</th>
          <td>{{profile.phone}}</td>
        </tr>
      </table>  
        
</div>

      <div class="col-md-4 default-img" >
        <form method="POST" action="/student_profile" enctype="multipart/form-data">
          <img src="/student_images/{{profile._id}}.jpg" id="imgView">
          <input type="file" name="Image" onchange="viewImage(event)"><br>
          <button type="submit" class="btn btn-success mt-3">Upload</button>
        </form>
      </div>
      
        </div>
        
</section>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>

