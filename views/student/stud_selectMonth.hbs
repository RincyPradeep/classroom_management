<script>
    function formatDate(){
        let dateString = document.getElementById("mymonth").value;
        
        var allDate = dateString.split(' ');
        var thisDate = allDate[0].split('-');
        
        var newDate = [thisDate[1],thisDate[0]].join("/");
        let d = new Date( dateString );
       let month=d.getMonth()+1;
        let year=d.getFullYear();
        document.getElementById("newmonth").value = newDate;
       document.getElementById("month").value = month;
       document.getElementById("year").value = year;
       document.getElementById("show_btn").hidden=false;
    }
</script>

